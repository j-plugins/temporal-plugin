<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.temporal</id>
    <name>Temporal</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko (@xepozz)</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="language-php.xml">com.jetbrains.php</depends>

    <resource-bundle>messages.TemporalBundle</resource-bundle>

    <extensionPoints>
        <extensionPoint name="workflow" interface="com.github.xepozz.temporal.common.extensionPoints.Workflow"/>
        <extensionPoint name="activity" interface="com.github.xepozz.temporal.common.extensionPoints.Activity"/>
    </extensionPoints>

    <extensions defaultExtensionNs="com.intellij">
        <microservices.endpointsProvider implementation="com.github.xepozz.temporal.common.endpoints.TemporalWorkflowEndpointsProvider"/>
        <microservices.endpointsProvider implementation="com.github.xepozz.temporal.common.endpoints.TemporalActivityEndpointsProvider"/>
        <toolWindow
                id="Temporal" icon="/META-INF/pluginIcon.svg"
                anchor="right" doNotActivateOnStart="true" secondary="false"
                factoryClass="com.github.xepozz.temporal.toolWindow.TemporalToolWindowFactory"
        />
    </extensions>
</idea-plugin>
