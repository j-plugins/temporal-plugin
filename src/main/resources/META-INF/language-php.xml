<idea-plugin>
    <extensions defaultExtensionNs="com.jetbrains.php">
        <typeProvider4
                order="first"
                implementation="com.github.xepozz.temporal.languages.php.TemporalTypeProvider"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <fileBasedIndex implementation="com.github.xepozz.temporal.languages.php.index.PhpWorkflowClassIndex"/>
        <fileBasedIndex implementation="com.github.xepozz.temporal.languages.php.index.PhpWorkflowMethodIndex"/>
        <fileBasedIndex implementation="com.github.xepozz.temporal.languages.php.index.PhpActivityClassIndex"/>
        <fileBasedIndex implementation="com.github.xepozz.temporal.languages.php.index.PhpActivityMethodIndex"/>
        <localInspection
                language="PHP"
                groupPath="Temporal"
                groupName="PHP"
                shortName="PhpActivityMethodInspection"
                key="inspection.php.activity.method.attribute.missing.display.name"
                bundle="messages.TemporalBundle"
                enabledByDefault="true"
                level="WARNING"
                implementationClass="com.github.xepozz.temporal.languages.php.inspections.PhpActivityMethodInspection"/>
        <localInspection
                language="PHP"
                groupPath="Temporal"
                groupName="PHP"
                shortName="PhpActivityMethodUsageInspection"
                key="inspection.php.activity.method.usage.attribute.missing.display.name"
                bundle="messages.TemporalBundle"
                enabledByDefault="true"
                level="WARNING"
                implementationClass="com.github.xepozz.temporal.languages.php.inspections.PhpActivityMethodUsageInspection"/>
    </extensions>

    <extensions defaultExtensionNs="com.github.xepozz.temporal">
        <workflow implementation="com.github.xepozz.temporal.languages.php.endpoints.PhpWorkflow"/>
        <activity implementation="com.github.xepozz.temporal.languages.php.endpoints.PhpActivity"/>
    </extensions>
</idea-plugin>
